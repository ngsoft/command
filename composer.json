{
  "name": "ngsoft/console",
  "description": "A CLI application helper",
  "version": "1.0.0",
  "keywords": [
    "console",
    "cli",
    "command line",
    "terminal"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Aymeric Anger",
      "role": "Developer",
      "homepage": "https://github.com/ngsoft"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.1",
    "ngsoft/mini-io": "^1.3",
    "ngsoft/text": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "NGSOFT\\": "src/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.36"
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 0,
    "platform-check": false
  },
  "scripts": {
    "fix": [
      "php-cs-fixer fix src"
    ],
    "check": [
      "phan"
    ]
  }
}